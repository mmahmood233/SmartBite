@startuml Admin Use Case
!theme plain
skinparam actorStyle awesome

title Wajba - Admin Use Case Diagram

left to right direction

actor Admin as A

rectangle "Wajba Admin System" {
  
  ' Authentication
  usecase "Login" as UC1
  
  ' Dashboard
  usecase "View Dashboard" as UC2
  usecase "View Statistics" as UC2A
  
  ' User Management
  usecase "Manage Users" as UC3
  usecase "Filter Users" as UC3A
  usecase "Search Users" as UC3B
  usecase "Delete User" as UC3C
  
  ' Restaurant Management
  usecase "Manage Restaurants" as UC4
  usecase "Approve Restaurant" as UC4A
  usecase "Edit Restaurant" as UC4B
  usecase "Delete Restaurant" as UC4C
  
  ' Category Management
  usecase "Manage Categories" as UC5
  usecase "Add Category" as UC5A
  usecase "Edit Category" as UC5B
  usecase "Delete Category" as UC5C
  
  ' Promotions Management
  usecase "Manage Promotions" as UC6
  usecase "Create Promotion" as UC6A
  usecase "Edit Promotion" as UC6B
  usecase "Delete Promotion" as UC6C
  usecase "Toggle Status" as UC6D
  
  ' Analytics
  usecase "View Analytics" as UC7
  usecase "Select Period" as UC7A
  usecase "View Revenue Stats" as UC7B
  usecase "View Order Stats" as UC7C
  usecase "View Charts" as UC7D
  
  ' Settings
  usecase "Manage Settings" as UC8
  usecase "Update Platform Config" as UC8A
}

' Admin relationships
A --> UC1
A --> UC2
A --> UC3
A --> UC4
A --> UC5
A --> UC6
A --> UC7
A --> UC8

' Dashboard includes
UC2 .> UC2A : <<include>>

' User Management
UC3 .> UC3A : <<include>>
UC3 .> UC3B : <<include>>
UC3 .> UC3C : <<extend>>

' Restaurant Management
UC4 .> UC4A : <<include>>
UC4 .> UC4B : <<extend>>
UC4 .> UC4C : <<extend>>

' Category Management
UC5 .> UC5A : <<extend>>
UC5 .> UC5B : <<extend>>
UC5 .> UC5C : <<extend>>

' Promotions Management
UC6 .> UC6A : <<extend>>
UC6 .> UC6B : <<extend>>
UC6 .> UC6C : <<extend>>
UC6 .> UC6D : <<extend>>

' Analytics
UC7 .> UC7A : <<include>>
UC7 .> UC7B : <<include>>
UC7 .> UC7C : <<include>>
UC7 .> UC7D : <<include>>

' Settings
UC8 .> UC8A : <<include>>

@enduml
