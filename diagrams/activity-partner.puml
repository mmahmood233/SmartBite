@startuml Partner Menu Management
!theme plain
skinparam ActivityBackgroundColor #FFE0B2
skinparam ActivityBorderColor #FF9800
skinparam ActivityDiamondBackgroundColor #FFF3E0
skinparam ActivityDiamondBorderColor #FFB74D

title Wajba - Partner Menu Management Activity Diagram

start

:Login to Partner Portal;

:View Dashboard;

:Navigate to Menu Management;

:View Current Menu Items;

if (Action?) then (Add Dish)
  :Enter Dish Details;
  :Set Price;
  :Select Category;
  
  if (Upload Image?) then (yes)
    :Upload Image;
  endif
  
  :Set Availability;
  :Save Dish;
  
  if (Success?) then (yes)
    :Show Success;
    :Refresh Menu;
  else (no)
    :Show Error;
    stop
  endif

elseif (Action?) then (Edit Dish)
  :Select Dish;
  :Load Details;
  :Update Information;
  
  if (Update Image?) then (yes)
    :Upload New Image;
  endif
  
  :Save Changes;
  :Show Success;
  :Refresh Menu;

elseif (Action?) then (Delete Dish)
  :Select Dish;
  
  if (Confirm?) then (yes)
    :Delete Dish;
    :Show Success;
    :Refresh Menu;
  else (no)
    :Cancel;
  endif

else (Toggle Availability)
  :Select Dish;
  :Toggle Status;
  :Update Database;
  :Show Success;
  :Refresh Menu;
endif

:Menu Updated;

stop

@enduml
