@startuml Partner Use Case
!theme plain
skinparam actorStyle awesome

title Wajba - Restaurant Partner Use Case Diagram

left to right direction

actor "Restaurant\nPartner" as P

rectangle "Wajba Partner System" {
  
  ' Authentication
  usecase "Login" as UC1
  
  ' Dashboard
  usecase "View Dashboard" as UC2
  usecase "View Statistics" as UC2A
  usecase "View Orders" as UC2B
  
  ' Menu Management
  usecase "Manage Menu" as UC3
  usecase "Add Dish" as UC3A
  usecase "Edit Dish" as UC3B
  usecase "Delete Dish" as UC3C
  usecase "Toggle Availability" as UC3D
  usecase "Upload Image" as UC3E
  
  ' Order Management
  usecase "Manage Orders" as UC4
  usecase "Accept Order" as UC4A
  usecase "Reject Order" as UC4B
  usecase "Start Preparing" as UC4C
  usecase "Mark Ready" as UC4D
  
  ' Business Info
  usecase "Manage Business Info" as UC5
  usecase "Update Details" as UC5A
  usecase "Update Hours" as UC5B
  
  ' Analytics
  usecase "View Analytics" as UC6
  usecase "View Revenue" as UC6A
  usecase "View Performance" as UC6B
}

' Partner relationships
P --> UC1
P --> UC2
P --> UC3
P --> UC4
P --> UC5
P --> UC6

' Dashboard includes
UC2 .> UC2A : <<include>>
UC2 .> UC2B : <<include>>

' Menu Management
UC3 .> UC3A : <<extend>>
UC3 .> UC3B : <<extend>>
UC3 .> UC3C : <<extend>>
UC3 .> UC3D : <<extend>>
UC3A .> UC3E : <<extend>>

' Order Management
UC4 .> UC4A : <<include>>
UC4 .> UC4B : <<extend>>
UC4 .> UC4C : <<include>>
UC4 .> UC4D : <<include>>

' Business Info
UC5 .> UC5A : <<include>>
UC5 .> UC5B : <<extend>>

' Analytics
UC6 .> UC6A : <<include>>
UC6 .> UC6B : <<include>>

@enduml
