  usecase "View Revenue Statistics" as UC10
  usecase "View Total Revenue" as UC10A
  usecase "View Revenue Growth" as UC10B
  usecase "View Order Statistics" as UC11
  usecase "View Total Orders" as UC11A
  usecase "View Orders Growth" as UC11B
  usecase "View User Statistics" as UC12
  usecase "View Total Users" as UC12A
  usecase "View Restaurant Statistics" as UC13
  usecase "View Total Restaurants" as UC13A
  usecase "View Rider Statistics" as UC14
  usecase "View Active Riders" as UC14A
  usecase "View Revenue Trends" as UC15
  usecase "View Revenue Chart" as UC15A
  usecase "View Order Trends" as UC16
  usecase "View Orders Chart" as UC16A
  usecase "Refresh Analytics" as UC17
}

