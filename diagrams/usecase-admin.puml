@startuml Admin Use Case Diagram
!theme plain
skinparam actorStyle awesome

title Wajba - Admin Use Case Diagram

left to right direction

actor Admin as A

rectangle "Wajba System" {
  ' Authentication
  usecase "Login" as UC1
  
  ' Dashboard
  usecase "View Dashboard" as UC2
  usecase "View Platform Overview" as UC2A
  usecase "View Recent Activity" as UC2B
  
  ' User Management
  usecase "Manage Users" as UC3
