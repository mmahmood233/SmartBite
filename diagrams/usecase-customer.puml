@startuml Customer Use Case
!theme plain
skinparam actorStyle awesome

title Wajba - Customer Use Case Diagram

left to right direction

actor Customer as C
actor "Payment\nGateway" as PG

rectangle "Wajba Food Delivery System" {
  
  ' Authentication
  usecase "Login/Register" as UC1
  usecase "Verify Email" as UC1A
  
  ' Browse & Search
  usecase "Browse Restaurants" as UC2
  usecase "Filter by Category" as UC2A
  usecase "Filter by Rating" as UC2B
  usecase "Search Food" as UC3
  usecase "View Menu" as UC4
  usecase "View Restaurant Details" as UC4A
  
  ' Cart Management
  usecase "Add to Cart" as UC5
  usecase "Update Quantity" as UC5A
  usecase "Remove Item" as UC5B
  
  ' Order Placement
  usecase "Place Order" as UC6
  usecase "Select Address" as UC6A
  usecase "Add Instructions" as UC6B
  usecase "Make Payment" as UC7
  usecase "Pay with Card" as UC7A
  usecase "Pay with Cash" as UC7B
  
  ' Order Tracking
  usecase "Track Order" as UC8
  usecase "View Order History" as UC9
  usecase "Reorder" as UC9A
  
  ' Profile Management
  usecase "Manage Profile" as UC10
  usecase "Update Info" as UC10A
  usecase "Manage Addresses" as UC10B
  usecase "Change Password" as UC10C
}

' Customer relationships
C --> UC1
C --> UC2
C --> UC3
C --> UC4
C --> UC5
C --> UC6
C --> UC7
C --> UC8
C --> UC9
C --> UC10

' Include relationships
UC1 .> UC1A : <<include>>
UC2 .> UC2A : <<include>>
UC2 .> UC2B : <<include>>
UC4 .> UC4A : <<include>>
UC5 .> UC5A : <<extend>>
UC5 .> UC5B : <<extend>>
UC6 .> UC6A : <<include>>
UC6 .> UC6B : <<extend>>
UC6 .> UC7 : <<include>>
UC7 .> UC7A : <<extend>>
UC7 .> UC7B : <<extend>>
UC9 .> UC9A : <<extend>>
UC10 .> UC10A : <<include>>
UC10 .> UC10B : <<include>>
UC10 .> UC10C : <<extend>>

' Payment Gateway
UC7 --> PG

@enduml
