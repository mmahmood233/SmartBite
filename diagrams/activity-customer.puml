@startuml Customer Place Order
!theme plain
skinparam ActivityBackgroundColor #FFE0B2
skinparam ActivityBorderColor #FF9800
skinparam ActivityDiamondBackgroundColor #FFF9C4
skinparam ActivityDiamondBorderColor #FBC02D

title Wajba - Customer Place Order Activity Diagram

start

:Open App;

if (Logged In?) then (yes)
else (no)
  :Navigate to Login;
  :Enter Credentials;
  if (Valid?) then (no)
    :Show Error;
    stop
  endif
endif

:View Restaurant List;

:Browse Restaurants;

:Select Restaurant;

:View Menu;

:Browse Menu Items;

repeat
  :Select Item;
  :Add to Cart;
backward:Continue Shopping;
repeat while (More Items?) is (yes)
->no;

:View Cart;

if (Cart Valid?) then (no)
  :Update Cart;
else (yes)
endif

:Proceed to Checkout;

:Select Delivery Address;

:Choose Payment Method;

if (Payment Type?) then (Card)
  :Enter Card Details;
  :Process Payment;
  if (Payment Success?) then (no)
    :Show Error;
    stop
  endif
else (Cash)
  :Cash on Delivery;
endif

:Place Order;

:Show Confirmation;

:Track Order;

:Receive Order;

stop

@enduml
