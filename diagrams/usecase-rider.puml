@startuml Rider Use Case
!theme plain
skinparam actorStyle awesome

title Wajba - Rider Use Case Diagram

left to right direction

actor Rider as R

rectangle "Wajba Rider System" {
  
  ' Authentication
  usecase "Login" as UC1
  
  ' Dashboard
  usecase "View Dashboard" as UC2
  usecase "View Earnings" as UC2A
  usecase "View Statistics" as UC2B
  
  ' Order Management
  usecase "View Available Orders" as UC3
  usecase "View Order Details" as UC3A
  usecase "Accept Delivery" as UC3B
  
  ' Active Delivery
  usecase "Manage Active Delivery" as UC4
  usecase "Navigate to Restaurant" as UC4A
  usecase "Arrived at Restaurant" as UC4B
  usecase "Pick Up Order" as UC4C
  usecase "Navigate to Customer" as UC4D
  usecase "Arrived at Customer" as UC4E
  usecase "Deliver Order" as UC4F
  
  ' History
  usecase "View Delivery History" as UC5
  usecase "Filter History" as UC5A
  
  ' Profile
  usecase "Manage Profile" as UC6
  usecase "Update Info" as UC6A
}

' Rider relationships
R --> UC1
R --> UC2
R --> UC3
R --> UC4
R --> UC5
R --> UC6

' Dashboard includes
UC2 .> UC2A : <<include>>
UC2 .> UC2B : <<include>>

' Available Orders
UC3 .> UC3A : <<include>>
UC3 .> UC3B : <<extend>>

' Active Delivery (matches status flow)
UC4 .> UC4A : <<include>>
UC4 .> UC4B : <<include>>
UC4 .> UC4C : <<include>>
UC4 .> UC4D : <<include>>
UC4 .> UC4E : <<include>>
UC4 .> UC4F : <<include>>

' History
UC5 .> UC5A : <<extend>>

' Profile
UC6 .> UC6A : <<include>>

@enduml
