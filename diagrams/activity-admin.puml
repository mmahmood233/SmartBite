@startuml Admin Platform Management
!theme plain
skinparam ActivityBackgroundColor #E1BEE7
skinparam ActivityBorderColor #9C27B0
skinparam ActivityDiamondBackgroundColor #F3E5F5
skinparam ActivityDiamondBorderColor #AB47BC

title Wajba - Admin Platform Management Activity Diagram

start

:Login to Admin Portal;

:View Dashboard;

if (Management Section?) then (User Management)
  :Navigate to Users;
  :View All Users;
  
  if (Action?) then (Filter)
    :Select Role Filter;
    :Display Filtered Users;
  elseif (Action?) then (Search)
    :Enter Search Query;
    :Display Results;
  else (Delete)
    :Select User;
    if (Confirm?) then (yes)
      :Delete User;
      :Show Success;
    endif
  endif

elseif (Management Section?) then (Restaurants)
  :Navigate to Restaurants;
  :View All Restaurants;
  
  if (Action?) then (Approve)
    :Review Restaurant;
    :Approve/Reject;
    :Notify Partner;
  elseif (Action?) then (Edit)
    :Select Restaurant;
    :Update Details;
    :Save Changes;
  else (Delete)
    :Select Restaurant;
    if (Confirm?) then (yes)
      :Delete Restaurant;
      :Show Success;
    endif
  endif

elseif (Management Section?) then (Categories)
  :Navigate to Categories;
  :View All Categories;
  
  if (Action?) then (Add)
    :Enter Category Name;
    :Upload Icon;
    :Save Category;
  elseif (Action?) then (Edit)
    :Select Category;
    :Update Details;
    :Save Changes;
  else (Delete)
    :Select Category;
    if (Confirm?) then (yes)
      :Delete Category;
      :Show Success;
    endif
  endif

elseif (Management Section?) then (Promotions)
  :Navigate to Promotions;
  :View All Promotions;
  
  if (Action?) then (Create)
    :Enter Promo Code;
    :Set Discount;
    :Set Validity;
    :Save Promotion;
  elseif (Action?) then (Edit)
    :Select Promotion;
    :Update Details;
    :Save Changes;
  else (Toggle)
    :Select Promotion;
    :Toggle Active/Inactive;
    :Update Status;
  endif

else (Analytics)
  :Navigate to Analytics;
  
  if (Time Period?) then (Week)
    :Load Weekly Data;
  elseif (Time Period?) then (Month)
    :Load Monthly Data;
  else (Year)
    :Load Yearly Data;
  endif
  
  :Display Revenue Stats;
  :Display Order Stats;
  :Display User Stats;
  :Show Charts;
endif

:Task Complete;

stop

@enduml
